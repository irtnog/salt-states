## This should be sufficient to deploy the Kirby Starterkit on a
## CentOS 7 server in development.

apache:
  general:
    Directory /var/www/html:
      AllowOverride: All

firewalld:
  zones:
    public:
      short: Public
      description: "For use in public areas.  You do not trust the other computers on networks to not harm your computer.  Only selected incoming connections are accepted."
      services:
        - http
        - https
        - mosh
        - ssh
        - dhcpv6-client
