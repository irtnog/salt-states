{%- from "kerberos5/map.jinja" import kerberos5_settings with context -%}
{% for section, settings in kerberos5_settings|dictsort if section not in ['packages'] %}
[{{ section }}]
{% for keyword, value in settings|dictsort -%}
{% if value is mapping -%}
{{ keyword }} = {
  {% for keyword, value in value|dictsort -%}
  {% if value is sameas(True) or value is sameas(False) -%}
  {{ keyword }} = {{ "true" if value else "false" }}
  {% else -%}
  {{ keyword }} = {{ value }}
  {% endif -%}
  {%- endfor %}
}
{% elif value is sameas(True) or value is sameas(False) -%}
{{ keyword }} = {{ "true" if value else "false" }}
{% else -%}
{{ keyword }} = {{ value }}
{% endif -%}
{%- endfor %}
{%- endfor %}
